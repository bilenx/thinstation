# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=cryptodev-linux
version=1.6
release=3.4.70
source=(http://download.gna.org/cryptodev-linux/cryptodev-linux-$version.tar.gz)

build() {
	cd $name-$version
	export REPORT_KERNEL=${release}TS_SMP

	make
	mkdir -p $PKG/lib/modules/${release}TS_SMP/kernel/extra/
	cp -a cryptodev.ko $PKG/lib/modules/${release}TS_SMP/kernel/extra/.

	mkdir -p $PKG/usr/include/crypto
	cp crypto/cryptodev.h $PKG/usr/include/crypto/.
	make clean

	export REPORT_KERNEL=${release}TS

	make
	mkdir -p $PKG/lib/modules/${release}TS/kernel/extra/
	cp -a cryptodev.ko $PKG/lib/modules/${release}TS/kernel/extra/.
}
